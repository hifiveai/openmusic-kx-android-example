<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="92dp">

    <ImageView
        android:id="@+id/acc_item_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
        <LinearLayout
            android:id="@+id/acc_item_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical">
            <include layout="@layout/progress_button"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/acc_item_icon"
        app:layout_constraintTop_toTopOf="@id/acc_item_icon"
        app:layout_constraintEnd_toStartOf="@id/acc_item_btn">

        <TextView
            android:id="@+id/acc_item_song_tv"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="歌曲名歌曲名歌曲名歌曲名歌曲名歌曲名歌曲名歌曲名歌曲名歌曲名"
            android:textAlignment="textStart"
            android:maxLines="1"
            android:ellipsize="end" />
        <TextView
            android:id="@+id/acc_item_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:textColor="@color/white_65"
            android:textSize="12sp"
            android:text="歌手名"
            android:textAlignment="textStart"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/acc_item_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:textColor="@color/white_65"
            android:textSize="12sp"
            android:text="类型"
            android:textAlignment="textStart"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        app:layout_constraintStart_toStartOf="@id/acc_item_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>